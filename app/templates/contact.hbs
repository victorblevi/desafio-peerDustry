<h1>Contact Page</h1>

<form class="form-horizontal">
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">Your email address*:</label>
        <div class="col-sm-10 col-lg-6">
            {{input type="email" class="form-control" value=emailAddress id="inputEmail3" placeholder="Your email address" autofocus="autofocus"}}
        </div>
    </div>
    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label">Your message*:</label>
        <div class="col-sm-10 col-lg-6">
            {{textarea class="form-control" placeholder="Your message. (At least 5 characters.)" rows="7" value=message}}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-success" disabled={{isInvalid}} {{action 'saveInvitation'}}>Send</button>
        </div>
    </div>
    {{#if responseMessage}}
    <div class="alert alert-success">{{responseMessage}}</div>
    {{/if}}
</form>